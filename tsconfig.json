{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@db/*": ["packages/db/*"],
      "@ui/*": ["packages/ui/*"]
    }
  },
  "include": ["apps", "services", "packages"]
}
